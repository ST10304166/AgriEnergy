@model IEnumerable<AgriEnergy.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}

<h2>All Registered Farmers</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Registered</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
                <td>@farmer.PhoneNumber</td>
                <td>@farmer.RegistrationDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
