@model IEnumerable<AgriEnergy.Models.Product>
@{
    ViewData["Title"] = "My Products";
}

<h2>My Products</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Add New Product</a>
</p>

@if (!Model.Any())
{
    <p>No products yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.ProductionDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}